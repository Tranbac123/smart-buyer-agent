# apps/api/src/.env
QX_APP_NAME=QuantumX API
QX_APP_VERSION=v1
QX_ENV=dev
QX_DEBUG=true

# CORS
QX_CORS_ORIGINS=["*"]

# HTTP client
QX_HTTPX__TIMEOUT=15.0
QX_HTTPX__MAX_KEEPALIVE=50
QX_HTTPX__MAX_CONNECTIONS=100
QX_HTTPX__USER_AGENT="QuantumX-Agent/1.0"

# Feature flags
QX_FEATURES__ENABLE_RAG=false
QX_FEATURES__ENABLE_SEARCH_CACHE=false
QX_FEATURES__ENABLE_SMART_BUYER=true
QX_FEATURES__ENABLE_MULTI_AGENT=false
QX_FEATURES__ENABLE_YAML_WORKFLOWS=false

# LLM provider (use local client for MVP)
QX_LLM_PROVIDER=local
# use for OpenAI/Anthropic on below:
# QX_LLM_PROVIDER=openai
# QX_OPENAI_API_KEY=sk-...
# QX_LLM_PROVIDER=anthropic
# QX_ANTHROPIC_API_KEY=...

# Redis/Postgres off
QX_REDIS__ENABLED=false
QX_POSTGRES__ENABLED=false

# Postgres:
# QX_POSTGRES__ENABLED=true
# QX_POSTGRES__HOST=localhost
# QX_POSTGRES__PORT=5432
# QX_POSTGRES__USER=postgres
# QX_POSTGRES__PASSWORD=postgres
# QX_POSTGRES__DB=quantumx
# hoặc dùng DSN:
# QX_POSTGRES__DSN=postgresql+psycopg://postgres:postgres@localhost:5432/quantumx
